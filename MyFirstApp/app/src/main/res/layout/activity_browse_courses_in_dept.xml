<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_browse_courses_in_dept"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.myfirstapp.BrowseCoursesInDept">

    <Button
        android:text="Home"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="18dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tab1"
        android:layout_width="wrap_content" />


    <Button
        android:text="Browse Courses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tab1"
        android:layout_toRightOf="@+id/tab1"
        android:layout_toEndOf="@+id/tab1"
        android:id="@+id/tab2" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="80dp"
        android:id="@+id/textView" />

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_weight="1"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableLayout
            android:background="#000000"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/courses">
            <TableRow
                android:layout_margin="1dp">
                <TextView
                    android:background="#FFFFFF"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="1dp"
                    android:layout_marginLeft="1dp"
                    android:text=" Course_id "
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="18sp" />
                <TextView
                    android:background="#FFFFFF"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="1dp"
                    android:layout_marginLeft="1dp"
                    android:text=" Sec_id "
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="18sp" />
                <TextView
                    android:background="#FFFFFF"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="1dp"
                    android:layout_marginLeft="1dp"
                    android:text=" Credits "
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="18sp" />
                <TextView
                    android:background="#FFFFFF"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="1dp"
                    android:layout_marginLeft="1dp"
                    android:text=" Title "
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="18sp" />
            </TableRow>
        </TableLayout>
    </HorizontalScrollView>
</RelativeLayout>
